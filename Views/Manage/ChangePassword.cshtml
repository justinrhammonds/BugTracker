@model BugTracker.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}
    <div class="col-sm-6 col-sm-offset-3">
        <div class="card-box row">
            <div class="col-xs-12">
                <h2 class="m-t-0 header-title"><b>Change Password</b></h2>
                <hr />
                @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, "Old Password", new { @class = "col-xs-12 control-label" })
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control  input" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, "New Password", new { @class = "col-xs-12 control-label" })
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control  input" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ConfirmPassword, "Confirm New Password", new { @class = "col-xs-12 control-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control  input" })
                    </div>
                    <div class="form-group pull-right">
                        <input type="submit" value="Change password" class="btn btn-info" />
                        @Html.ActionLink("Cancel", "Index", "Tickets", null, new { @class = "btn btn-info" })
                    </div>
                }
            </div>

        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
