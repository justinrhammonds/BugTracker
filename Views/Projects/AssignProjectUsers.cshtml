@model BugTracker.ViewModels.ProjectsViewModel
@{
    ViewBag.Title = "AssignProjectUsers";
}

<div class="col-sm-6 col-sm-offset-3">
    <div class="card-box row">
        <div class="col-xs-12">
            <h2 class="m-t-0 header-title"><b>Assign Users to @Model.Project.Name</b></h2>
            <p class="text-muted font-13 m-b-30">
                This form displays the current users assigned to the project: @Model.Project.Name. Use the dropdown to select the users that should be assigned to this project. Once users are selected, click "Assign Users" to submit the form.
            </p>
            <hr />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Users, "Users for " + @Model.Project.Name, new { @class = "col-sm-6 control-label text-right" })
                        @Html.ListBox("SelectedUsers", Model.Users, new { @id = "multi-select-box", @class="col-sm-6", multiple = "multiple" })
                    </div>
                </div>
                <hr />
                <div class="col-sm-12">
                    <div class="form-group pull-right">
                        <input type="submit" value="Assign Users" class="btn btn-info" />
                        @Html.ActionLink("Cancel", "Index", "Projects", new { @class = "btn btn-info" })
                    </div>
                </div>

            }
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('#multi-select-box').multiselect();
        });
    </script>
}

