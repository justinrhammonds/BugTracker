@model BugTracker.Models.CodeFirst.Project

@{
    ViewBag.Title = "Create";
}

<div class="col-sm-6 col-sm-offset-3">
    <div class="card-box row">
        <div class="col-xs-12">
            <h2 class="m-t-0 header-title"><b>Create New Project</b></h2>
            <p class="text-muted font-13 m-b-30">
                You can create a new project simply by giving it a name and submitting the form. If you are a project manager, you will be automatically assigned as a user on the project so you can more easily assign team members to the new project.
            </p>
            <hr />
            @using (Html.BeginForm("Create", "Projects", FormMethod.Post, new { @role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="col-sm-10 col-sm-offset-1">                    
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, "Project Name", new { @class = "col-xs-12 control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control input" } })
                    </div>
                    <div class="form-group pull-right">
                        <input type="submit" value="Create" class="btn btn-info" />
                        @Html.ActionLink("Cancel", "Index", "Projects", new { @class = "btn btn-info" })
                    </div>
                </div>

            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
